{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "mrx101/multi-client",
            "hostname": "client",
            "essential" : false

        },

        {
            "name": "nginx",
            "image": "mrx101/multi-nginx",            
            "essential" : true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]
        },

        {
            "name": "server",
            "image": "mrx101/multi-server",
            "hostname": "api",
            "essential" : false
        },

        {
            "name": "worker",
            "image": "mrx101/multi-worker",            
            "essential" : false
        }
    ]
}